
@{
    ViewData["Title"] = "New Order";
}

<h2>New Order</h2>
<form method="post">
    <label>
        Choose an item from the list to add to the cart or
        start type the name in:
    </label> <input list="shelf" name="shelf" />
    <datalist id="shelf" name="shelf">
        @foreach (var item in ViewBag.Shelf)
        {
            <option value="@item.ID">@item.Name</option>
        }
    </datalist>
    <input type="submit" value="Add Item" formaction="AddItem"/>
    <br>
    @if (ViewBag.Cart != null)
    {
        <label>Current cart</label>
        <input list="cart" name="cart" />
        <datalist id="cart" name="cart">
            @foreach (var item in ViewBag.Cart)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </datalist>
        <input type="submit" value="Remove Item" formaction="RemoveItem"/>
        <input type="submit" value="Checkout" formaction="Checkout"/>

    }
    else {
        <h1>No items in cart</h1>
    }

</form>
